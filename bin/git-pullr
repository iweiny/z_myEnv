#!/bin/sh

b_list=$@

if [ "$b_list" == "" ]; then
	b_list=`git branch | grep "*" | sed -e "s/^\* \(.*\)/\1/"`
fi

echo ""
echo "pull --rebase the following"
echo ""
echo "git pull --rebase : $b_list"
echo ""
echo -n "    OK? "
read ch
if [ "$ch" != "yes" ]; then
	exit 1
fi

for b in $b_list; do
	echo "checkout $b"
	git checkout $b
	rc=$?
	if [ "$rc" != "0" ]; then
		echo ""
		echo "   *** checkout of '$b' failed: $rc"
		echo ""
		exit $rc
	fi
	git pull --rebase
	rc=$?
	if [ "$rc" != "0" ]; then
		echo ""
		echo "   *** 'pull --rebase' of '$b' failed: $rc"
		echo ""
		exit $rc
	fi
	echo ""
	echo "   *** 'pull --rebase' of '$b' complete: $rc"
	echo ""
done

exit 0
